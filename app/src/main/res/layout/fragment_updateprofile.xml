<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdc788"
    tools:context=".fragment.updateprofile.UpdateprofileFragment">


    <TextView
        android:id="@+id/txt_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Profile"
        android:textColor="#813F0B"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:background="#ECB06A"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/et_firstname"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#813F0B"
            android:ems="10"
            android:fontFamily="@font/fredoka_one"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#813F0B"
            android:textColorHint="#B3672B" />

        <EditText
            android:id="@+id/et_lastname"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#813F0B"
            android:ems="10"
            android:fontFamily="@font/fredoka_one"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#813F0B"
            android:textColorHint="#B3672B" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#813F0B"
            android:ems="10"
            android:fontFamily="@font/fredoka_one"
            android:hint="Email"
            android:inputType="textWebEmailAddress"
            android:minHeight="48dp"
            android:textColor="#813F0B"
            android:textColorHint="#B3672B" />

        <Spinner
            android:id="@+id/spinner_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#813F0B"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btn_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#813F0B"
            android:enabled="false"
            android:fontFamily="@font/fredoka_one"
            android:text="Edit Profile"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>